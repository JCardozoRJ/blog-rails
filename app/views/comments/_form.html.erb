<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.text_field :commenter, placeholder:"Nome", class:"form-control" %>
  </p>
  <p>
    <%= form.text_area :body, maxlength:200, rows:3, placeholder:"Comentário", class:"form-control" %>
  </p>
  <p>
  <div class="d-grid mb-4">
    <%= form.submit "Criar Comentário", class:"btn btn-secondary" %>
  </div>
  </p>
<% end %>
